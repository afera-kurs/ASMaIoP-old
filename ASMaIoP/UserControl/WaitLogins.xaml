<UserControl x:Class="ASMaIoP.UserControl.WaitLogins"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ASMaIoP.UserControl"
               mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid Background="LightGray" Margin="10">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Произведите авторизацию!" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="login" Content="asd" Margin="20" Click="login_Click"/>
        </StackPanel>
    </Grid>
</UserControl>